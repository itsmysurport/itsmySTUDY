<Window x:Class="ex_StackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ex_StackPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Background="Azure">
        <StackPanel Background="Pink" Orientation="Horizontal" Margin="10">
            <Button Content="1" Width="200" Margin="10"/>
            <Button Content="2" Width="300" Margin="10"/>
            <Button Content="3" Width="220" Margin="10"/>
        </StackPanel>
        <StackPanel Background="Blue" Orientation="Vertical" Margin="10">
            <Button Content="1" Width="200" Height="30" Margin="10"/>
            <Button Content="2" Width="300" Height="50" Margin="10"/>
            <Button Content="3" Width="220" Height="70" Margin="10"/>
        </StackPanel>
        
    </StackPanel>
</Window>
